<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anue7.ewastecollector.AddToInventoryActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editTextItemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/label_ITEM_TYPE"
                android:imeOptions="actionDone"
                android:paddingBottom="20dp"
                android:paddingLeft="55dp"
                android:paddingTop="20dp"
                android:singleLine="true"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editTextItemQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/label_ITEM_QUANTITY"
                android:imeOptions="actionDone"
                android:paddingBottom="20dp"
                android:paddingLeft="55dp"
                android:paddingTop="20dp"
                android:singleLine="true"
                android:textSize="20sp" />

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/done_button_background"
            android:onClick="doneAddingItems"
            android:padding="20dp"
            android:text="@string/label_ITEM_DONE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pledgedItemsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:padding="10dp"
            android:text="@string/label_ITEMS_PLEDGED"
            android:textColor="@color/list_text_color"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/pledgedItemsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="Roboto"
                android:padding="10dp"
                android:textColor="@color/list_text_color"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>